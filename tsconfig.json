{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "rootDir": "./src",
    "moduleResolution": "Node",
    "baseUrl": "./src",
    /* Emit */
    // "declaration": true,
    // "emitDeclarationOnly": true,
    // "outDir": "./es",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["typings.d.ts", "rollup.config.ts", "src/**/*"],
  "exclude": ["rollup.config.ts"]
}
